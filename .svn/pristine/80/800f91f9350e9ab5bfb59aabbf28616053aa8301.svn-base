<Window x:Class="SimuVault.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Password"
        Width="300"
        Height="180"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">
    <StackPanel>

        <TextBlock x:Name="passwordLabel"
                   Margin="10,3"
                   Text="Password (must be 12 characters or more):" />
        <PasswordBox x:Name="passwordBox"
                     Margin="10,1"
                     VerticalContentAlignment="Center" />

        <TextBlock x:Name="passwordConfirmTextBlock"
                   Margin="10,3"
                   Text="Confirm Password:" />
        <PasswordBox x:Name="passwordBox2"
                     Margin="10,1"
                     VerticalContentAlignment="Center"
                     KeyUp="PasswordBox_KeyUp_1" />
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="btnOK"
                    Grid.Column="1"
                    Margin="3"
                    Click="btnOK_Click_1"
                    Content="OK"
                    IsDefault="True"
                    IsEnabled="False" />
            <Button x:Name="btnCancel"
                    Grid.Column="2"
                    Margin="3"
                    Click="btnCancel_Click_1"
                    Content="Cancel"
                    IsCancel="True" />
        </Grid>
    </StackPanel>
</Window>
