<Window x:Class="SimuVault.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SimuVault.ViewModels"
        Title="{Binding Title,
                        Mode=OneWay}"
        Width="1000"
        Height="600"
        Icon="images/logo48.png"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <local:WalletVM x:Key="myVM" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Menu FontSize="14">
            <MenuItem Margin="5" Header="File">
                <MenuItem x:Name="btnNew"
                          Click="btnNew_Click_1"
                          Header="New">
                    <MenuItem.Icon>
                        <Image Height="24"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/new.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="btnOpen"
                          Click="btnOpen_Click_1"
                          Header="Open">
                    <MenuItem.Icon>
                        <Image Height="24"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/open.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="btnSave"
                          Click="btnSave_Click_1"
                          Header="Save"
                          IsEnabled="{Binding IsChanged}">
                    <MenuItem.Icon>
                        <Image Height="24"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/save.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="btnSaveAs"
                          Click="btnSaveAs_Click_1"
                          Header="Save As"
                          IsEnabled="{Binding IsChanged}">
                    <MenuItem.Icon>
                        <Image Height="24"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/saveas.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem x:Name="btnExit"
                          Click="btnExit_Click_1"
                          Header="Exit" />
            </MenuItem>
            <MenuItem x:Name="btnAbout"
                      Margin="5"
                      Click="btnAbout_Click_1"
                      Header="About" />
        </Menu>
        <Grid x:Name="MainLayout"
              Grid.Row="1"
              Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <GridSplitter Grid.RowSpan="4"
                          Grid.Column="1"
                          Width="5"
                          HorizontalAlignment="Left" />

            <Border Grid.ColumnSpan="2" Background="#FFECECEC" />
            <Grid Grid.Column="1"
                  Margin="5"
                  HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Margin="0,0,0,0"
                           VerticalAlignment="Center"
                           Text="Search:" />
                <TextBox Grid.Column="1"
                         Width="300"
                         Height="25"
                         Margin="5,0,5,0"
                         Text="{Binding SearchText,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}" />
            </Grid>

            <StackPanel Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                <Button x:Name="btnAdd"
                        Width="50"
                        Margin="5"
                        Click="btnAdd_Click_1"
                        Content="Add" />
                <Button x:Name="btnDelete"
                        Width="50"
                        Margin="5"
                        HorizontalAlignment="Right"
                        Click="btnDelete_Click_1"
                        Content="Delete"
                        IsEnabled="{Binding IsAnyItemSelected}" />
            </StackPanel>

            <ListBox Grid.Row="1"
                     Margin="5,10"
                     VerticalAlignment="Stretch"
                     DisplayMemberPath="Title"
                     ItemsSource="{Binding FilteredItems}"
                     SelectedItem="{Binding SelectedItem,
                                            Mode=TwoWay}"
                     SelectionMode="Single" />

            <GroupBox Grid.Row="1"
                      Grid.Column="1"
                      Margin="10,2"
                      Header="Details">

                <StackPanel>
                    <TextBlock Margin="5,0,5,5"
                               VerticalAlignment="Center"
                               Text="Name:" />
                    <TextBox x:Name="titleTextBox"
                             Grid.Column="1"
                             Margin="5,0,10,0"
                             HorizontalAlignment="Stretch"
                             FontWeight="Bold"
                             IsEnabled="{Binding IsAnyItemSelected}"
                             Text="{Binding SelectedItem.Title,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap" />

                    <TextBlock Grid.Row="1"
                               Margin="5,10,5,0"
                               IsEnabled="{Binding IsAnyItemSelected}"
                               Text="Key:" />
                    <TextBox Grid.Row="2"
                             Margin="5,5,10,5"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"
                             AcceptsReturn="True"
                             IsEnabled="{Binding IsAnyItemSelected}"
                             Text="{Binding SelectedItem.Content,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" />
                </StackPanel>

            </GroupBox>
        </Grid>
    </Grid>
</Window>
