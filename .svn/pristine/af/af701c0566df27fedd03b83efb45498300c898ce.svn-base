<Window x:Class="SimuVault.About"
        xmlns="http://schemas.microsoft.com/netfx/2007/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About"
        Width="350"
        Height="180"
        FontSize="14"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="10">
            <TextBlock x:Name="txtAppName"
                       Height="20"
                       Margin="5,0"
                       Text="" />
            <TextBlock x:Name="txtVersion"
                       Height="20"
                       Margin="5,0"
                       Text="" />
            <Grid Margin="3,50,3,3">
                <TextBlock Height="20" Text="SimuTech Group © 2014" />
                <Button Grid.Row="3"
                        Grid.Column="2"
                        Width="100"
                        Height="25"
                        HorizontalAlignment="Right"
                        Click="Button_Click_1"
                        Content="Ok"
                        IsCancel="True"
                        IsDefault="True" />

            </Grid>
        </StackPanel>

        <Image Grid.Row="0"
               Grid.Column="1"
               Height="64"
               Margin="10"
               VerticalAlignment="Top"
               Source="Images/logo128.png" />

    </Grid>
</Window>