<Window x:Class="SimuVault.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SimuVault.ViewModels"
        Title="{Binding Title,
                        Mode=OneWay}"
        Width="1024"
        Height="640"
        Icon="images/logo48.png"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Menu FontSize="14">
            <MenuItem Margin="5" Header="File">
                <MenuItem Click="NewVault_Click" Header="New">
                    <MenuItem.Icon>
                        <Image Height="24"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/new.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Click="OpenVault_Click" Header="Open">
                    <MenuItem.Icon>
                        <Image Height="24"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/open.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Click="SaveVault_Click"
                          Header="Save"
                          IsEnabled="{Binding IsChanged}">
                    <MenuItem.Icon>
                        <Image Height="24"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/save.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Click="SaveAsVault_Click"
                          Header="Save As"
                          IsEnabled="{Binding IsChanged}">
                    <MenuItem.Icon>
                        <Image Height="24"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/saveas.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Click="ExitApplication_Click" Header="Exit" />
            </MenuItem>
            <MenuItem Margin="5"
                      Click="About_Click"
                      Header="About" />
        </Menu>
        <Grid x:Name="MainLayout"
              Grid.Row="1"
              Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MinWidth="200" />
                <ColumnDefinition Width="1*" MinWidth="200" />
                <ColumnDefinition Width="2*" MinWidth="200" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <GridSplitter Grid.Row="1"
                          Grid.Column="1"
                          Width="5"
                          HorizontalAlignment="Left"
                          Background="Transparent" />

            <GridSplitter Grid.Row="1"
                          Grid.Column="2"
                          Width="5"
                          HorizontalAlignment="Left"
                          Background="Transparent" />

            <Border Grid.Row="0"
                    Grid.ColumnSpan="3"
                    Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}" />

            <Grid Grid.ColumnSpan="3" HorizontalAlignment="Right">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Center" Text="Search Keys" />

                <TextBox Grid.Column="2"
                         Width="250"
                         Margin="5"
                         VerticalContentAlignment="Center"
                         Background="#FFEDF9FF"
                         Text="{Binding SearchText,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}" />
            </Grid>

            <GroupBox Grid.Row="1"
                      Grid.Column="0"
                      Margin="5,0"
                      Header="Groups">
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Margin="0,5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">
                        <Button Width="70"
                                Margin="5"
                                Background="#FF65C15C"
                                Click="AddGroup_Click"
                                Content="Add"
                                Foreground="#FFFBFBFB" />
                        <Button Width="70"
                                Margin="5"
                                Background="#FFC74E20"
                                Click="DeleteGroup_Click"
                                Content="Delete"
                                Foreground="#FFFBFBFB"
                                IsEnabled="{Binding IsAnyGroupSelected}" />
                    </StackPanel>
                    <TextBox Grid.Row="1"
                             Margin="5"
                             HorizontalAlignment="Stretch"
                             FontWeight="Bold"
                             IsEnabled="{Binding IsAnyGroupSelected}"
                             Text="{Binding SelectedGroup.Title,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap" />

                    <ListBox Grid.Row="2"
                             Grid.RowSpan="2"
                             Margin="5,10"
                             VerticalAlignment="Stretch"
                             DisplayMemberPath="Title"
                             ItemsSource="{Binding Groups}"
                             SelectedItem="{Binding SelectedGroup,
                                                    Mode=TwoWay}"
                             SelectionMode="Single" />

                </Grid>

            </GroupBox>

            <GroupBox Grid.Row="1"
                      Grid.Column="1"
                      Margin="5,0"
                      Header="Keys">
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>


                    <StackPanel Grid.Column="1"
                                Margin="0,5"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">
                        <Button Width="70"
                                Margin="5"
                                Background="#FF65C15C"
                                Click="AddItem_Click"
                                Content="Add"
                                Foreground="#FFFBFBFB"
                                IsEnabled="{Binding IsAnyGroupSelected}" />
                        <Button Width="70"
                                Margin="5"
                                Background="#FFC74E20"
                                Click="DeleteItem_Click"
                                Content="Delete"
                                Foreground="#FFFBFBFB"
                                IsEnabled="{Binding IsAnyItemSelected}" />
                    </StackPanel>

                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Margin="5"
                             HorizontalAlignment="Stretch"
                             FontWeight="Bold"
                             IsEnabled="{Binding IsAnyItemSelected}"
                             Text="{Binding SelectedItem.Title,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap" />

                    <ListBox Grid.Row="2"
                             Grid.RowSpan="2"
                             Grid.Column="1"
                             Margin="5,10"
                             VerticalAlignment="Stretch"
                             DisplayMemberPath="Title"
                             ItemsSource="{Binding FilteredItems}"
                             SelectedItem="{Binding SelectedItem,
                                                    Mode=TwoWay}"
                             SelectionMode="Single" />
                </Grid>

            </GroupBox>

            <GroupBox Grid.Row="1"
                      Grid.Column="2"
                      Margin="5,0"
                      Header="Value">

                <TextBox Grid.Row="2"
                         Margin="5"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         AcceptsReturn="True"
                         IsEnabled="{Binding IsAnyItemSelected}"
                         Text="{Binding SelectedItem.Content,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto" />

            </GroupBox>


        </Grid>
    </Grid>
</Window>
