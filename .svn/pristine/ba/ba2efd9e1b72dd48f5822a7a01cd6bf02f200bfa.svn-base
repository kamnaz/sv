<Window x:Class="SimuVault.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SimuVault.ViewModels"
        Title="{Binding Title,
                        Mode=OneWay}"
        Width="1000"
        Height="600"
        Icon="images/logo32.png"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <local:WalletVM x:Key="myVM" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Menu FontSize="14">
            <MenuItem Header="File">
                <MenuItem x:Name="btnNew"
                          Click="btnNew_Click_1"
                          Header="New">
                    <MenuItem.Icon>
                        <Image Height="24"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/new.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="btnOpen"
                          Click="btnOpen_Click_1"
                          Header="Open">
                    <MenuItem.Icon>
                        <Image Height="24"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/open.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <!--  <MenuItem x:Name="btnOpenCloud" Header="Open From Cloud" Click="btnOpenCloud_Click_1" />  -->
                <MenuItem x:Name="btnSave"
                          Click="btnSave_Click_1"
                          Header="Save"
                          IsEnabled="{Binding IsChanged}">
                    <MenuItem.Icon>
                        <Image Height="24"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/save.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="btnSaveAs"
                          Click="btnSaveAs_Click_1"
                          Header="Save As"
                          IsEnabled="{Binding IsChanged}">
                    <MenuItem.Icon>
                        <Image Height="24"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/saveas.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <!--  <MenuItem x:Name="btnSaveCloud" Header="Save To Cloud" Click="btnSaveCloud_Click_1" IsEnabled="{Binding IsChanged}" />  -->
                <Separator />
                <MenuItem x:Name="btnExit"
                          Click="btnExit_Click_1"
                          Header="Exit" />
            </MenuItem>
            <MenuItem x:Name="btnAbout"
                      Click="btnAbout_Click_1"
                      Header="About" />
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.RowSpan="4"
                          Grid.Column="1"
                          Width="5"
                          HorizontalAlignment="Left" />
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <Grid Margin="5,0,5,0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               Text="Search:" />
                    <TextBox Grid.Column="1"
                             Height="25"
                             Margin="5,0,5,0"
                             Text="{Binding SearchText,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Grid.Row="1"
                               Width="200"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Text="Key Pairs:" />

                    <StackPanel Grid.Row="1"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                        <Button x:Name="btnAdd"
                                Width="50"
                                Margin="5"
                                Click="btnAdd_Click_1"
                                Content="Add" />
                        <Button x:Name="btnDelete"
                                Width="50"
                                Margin="5"
                                HorizontalAlignment="Right"
                                Click="btnDelete_Click_1"
                                Content="Delete"
                                IsEnabled="{Binding IsAnyItemSelected}" />
                    </StackPanel>

                </Grid>
                <ListBox Grid.Row="1"
                         MinHeight="430"
                         Margin="5"
                         VerticalAlignment="Stretch"
                         DisplayMemberPath="Title"
                         ItemsSource="{Binding FilteredItems}"
                         SelectedItem="{Binding SelectedItem,
                                                Mode=TwoWay}"
                         SelectionMode="Single" />
            </Grid>
            <Grid Grid.Column="1" Margin="5,8,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock Margin="5,0,5,5"
                               VerticalAlignment="Center"
                               Text="Title:" />
                    <TextBox x:Name="titleTextBox"
                             Grid.Column="1"
                             Height="25"
                             Margin="5,0,10,0"
                             HorizontalAlignment="Stretch"
                             FontWeight="Bold"
                             IsEnabled="{Binding IsAnyItemSelected}"
                             Text="{Binding SelectedItem.Title,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap" />
                </Grid>
                    <TextBlock Margin="5,25,5,0" Grid.Row="1"
                               IsEnabled="{Binding IsAnyItemSelected}"
                               Text="Content:" />
                    <TextBox Margin="5,5,10,5"
                             AcceptsReturn="True" Grid.Row="2"
                             VerticalScrollBarVisibility="Auto"
                             VerticalAlignment="Stretch"
                             Text="{Binding SelectedItem.Content,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap" />
            </Grid>
        </Grid>
    </Grid>
</Window>
